version: "3"

services:

  app:
    image: vladimir028/devops-project:2.0
#    build:
#      context: .
#      dockerfile: Dockerfile
    container_name: devops-project
    environment:
      SPRING_DATASOURCE_URL: jdbc:postgresql://db:5432/book-store
    ports:
      - 8080:8080
    depends_on:
      - db

  db:
    image: postgres
    container_name: kiii-db
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=admin
      - POSTGRES_DB=book-store
    ports:
      - 5432:5432
    volumes:
      - postgres-data:/var/lib/postgresql/data

volumes:
  postgres-data:
